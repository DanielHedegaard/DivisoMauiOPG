<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DivisoMauiOPG.MainPage">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Image
            Source="divisologo.png"
            HeightRequest="100"
            HorizontalOptions="Center" 
            Grid.Row="0"/>

        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Start"
            Grid.Row="1">
            <Label
                Text="Login"
                SemanticProperties.HeadingLevel="Level9"
                FontSize="22"
                HorizontalOptions="Center" 
                FontAttributes="Bold"/>

            <Entry x:Name="loginEntry"
                Placeholder="Indtast koden her" />

            <Button
                x:Name="LoginBtn"
                Text="Login"
                HorizontalOptions="Center" 
                Clicked="LoginBtn_Clicked"/>
        </VerticalStackLayout>
    </Grid>
</ContentPage>
